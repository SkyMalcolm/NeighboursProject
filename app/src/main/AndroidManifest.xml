<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.neighbourproject">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

    <application
        android:name=".NeighbourApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NeighbourProject">
        <activity
            android:name=".ui.neigbour.NeighbourActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".ui.search.SearchActivity"/>
        <activity
            android:name=".ui.edit.EditProfileActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".ui.homepage.HomePageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>